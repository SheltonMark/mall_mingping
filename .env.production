# ==========================================
# 生产环境配置文件
# ==========================================

# Database - MySQL
DATABASE_URL="mysql://用户名:密码@localhost:3306/数据库名"

# JWT
JWT_SECRET="your-production-jwt-secret-key-change-this"
JWT_EXPIRATION="7d"

# Server
PORT=3001
NODE_ENV="production"

# File Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760  # 10MB

# CORS - 改为你的前端域名
CORS_ORIGIN="http://你的服务器IP:3000"